@model BetterHere.Web.Models.AddUserViewModel

@{
    ViewData["Title"] = "Register";
    ViewData["BodyColorExplicit"] = "#F2AB27";
    ViewData["BodyColorClass"] = "my-body-background";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">

    <div class="col-md-6 col-md-offset-3">
        <div class="center-block">
            <h2 class="text-center text-secondary">Register</h2>

            <form asp-action="Register" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Username" class="control-label text-secondary"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <partial name="_User" />

                <div class="form-group">
                    <label asp-for="UserTypeId" class="control-label text-secondary"></label>
                    <select asp-for="UserTypeId" asp-items="Model.UserTypes" class="form-control"></select>
                    <span asp-validation-for="UserTypeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label text-secondary"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="control-label text-secondary"></label>
                    <input asp-for="PasswordConfirm" class="form-control" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>

                <br />
                <div class="form-group">
                    <input type="submit" value="Register" class="btn my-btn-primary" />
                </div>
            </form>
        </div>
    </div>


