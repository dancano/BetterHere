@model IEnumerable<BetterHere.Web.Data.Entities.TypeFoodEntity>

@{
    ViewData["Title"] = "Index";
    ViewData["BodyColorExplicit"] = "#F2AB27";
    ViewData["BodyColorClass"] = "my-body-background";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

<br />
<div class="container">
    <p> <a asp-action="Create" class="btn my-btn-primary">Create New</a> </p>

    <div>
        <!-- Header -->
        <header id="header" class="alt">
            <div class="logo"><a href="index.html">Better Here <span>by Better Here</span></a></div>
            <a href="#menu">Menu</a>
        </header>
        <!-- Nav -->
        <nav id="menu">
            <ul class="links">
                <li><a asp-area="" asp-controller="Establishments" asp-action="Index">Establishments</a></li>
                <li><a asp-area="" asp-controller="TypeEstablishments" asp-action="Index">Type Establishments</a></li>
                <li><a asp-area="" asp-controller="TypeFoods" asp-action="Index">Type Food</a></li>
            </ul>
        </nav>
    </div>
    <div class="table-responsive text-secondary">
        <table class="table table-bordered text-secondary my-table" id="MyTable" width="100%" cellspacing="0">
            @*<table class="my-table text-secondary" id="MyTable" width="100%" cellspacing="0">*@
            <thead>
                <tr>
                    <th style="cursor: pointer;" class="text-secondary">
                        @Html.DisplayNameFor(model => model.FoodTypeName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th class="text-secondary">
                        @Html.DisplayNameFor(model => model.FoodTypeName)
                    </th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="tr-item">
                        <td class="text-secondary">
                            @Html.DisplayFor(modelItem => item.FoodTypeName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn my-btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="glyphicon glyphicon-align-justify"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn my-btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
