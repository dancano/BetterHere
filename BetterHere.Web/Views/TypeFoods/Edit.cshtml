@model BetterHere.Web.Data.Entities.TypeFoodEntity

@{
    ViewData["Title"] = "Edit";
    ViewData["BodyColorExplicit"] = "#F2AB27";
    ViewData["BodyColorClass"] = "my-body-background";

}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">

    <div class="col-md-6 col-md-offset-3">
        <div class="center-block">
            <h2 class="text-center text-secondary">Edit Establishment</h2>

            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="FoodTypeName" class="control-label"></label>
                    <input asp-for="FoodTypeName" class="form-control" />
                    <span asp-validation-for="FoodTypeName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn my-btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
