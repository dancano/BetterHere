@model BetterHere.Web.Data.Entities.TypeEstablishmentEntity

@{
    ViewData["Title"] = "Details";
    ViewData["BodyColorExplicit"] = "#F2AB27";
    ViewData["BodyColorClass"] = "my-body-background";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">

    <div class="col-md-6 col-md-offset-3">
        <div class="center-block">
            <h2 class="text-center text-secondary">Type Establishment</h2>

            <table class="table">
                <thead>
                    <tr>
                        <th style="cursor: pointer;" class="text-secondary">
                            @Html.DisplayNameFor(model => model.NameType)
                        </th>
                        <th style="cursor: pointer;" class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().Cities)
                        </th>
                        <th style="cursor: pointer;" class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().SourceLatitude)
                        </th>
                        <th style="cursor: pointer;" class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().SourceLongitude)
                        </th>
                        <th style="cursor: pointer;" class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().Remarks)
                        </th>
                        <th style="cursor: pointer;" class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().AverageQualification)
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th class="text-secondary">
                            @Html.DisplayFor(model => model.NameType)
                        </th>
                        <th class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().Cities)
                        </th>
                        <th class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().SourceLatitude)
                        </th>
                        <th class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().SourceLongitude)
                        </th>
                        <th class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().Remarks)
                        </th>
                        <th class="text-secondary">
                            @Html.DisplayNameFor(model => model.EstablishmentLocations.FirstOrDefault().AverageQualification)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
            </table>
        </div>
        <br />
        <div>
            <a asp-action="FoodsDetails" asp-route-id="@Model.Id" class="btn btn-info">Foods Detail</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn my-btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info"><i class="glyphicon glyphicon-align-justify"></i></a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn my-btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
            <a asp-action="Index" class="btn my-btn-primary">Back to List</a>
        </div>
    </div>
</div>


    <script src="~/js/jquery.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        $('#MyTable').DataTable();
    });

    </script>
