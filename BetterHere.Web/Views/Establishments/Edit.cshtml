<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">

    <div class="col-md-6 col-md-offset-3">
        <div class="center-block">
            <h2 class="text-center text-secondary">Edit Establishment</h2>

            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="LogoEstablishmentPath" class="control-label"></label>
                    <input asp-for="LogoEstablishmentPath" class="form-control" type="file" />
                    <span asp-validation-for="LogoEstablishmentPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn my-btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.PictureFullPathEstablishment))
            {
                <img src="@Url.Content(Model.PictureFullPathEstablishment)" alt="Image" style="width:300px;height:300px;max-width: 100%; height: auto;" />
            }
        </div>
    </div>
 </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
